<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainMenuTableLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center" >

    <!-- 3 columns -->

    <TableRow
        android:id="@+id/mainMenuTableRow1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5" >

        <Button
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:onClick="showMenuMenus"
            android:text="@string/main_menu_menus" />

        <Button
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:onClick="showMenuWines"
            android:text="@string/main_menu_wines" />

        <Button
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:onClick="showMenuSearch"
            android:text="@string/main_menu_recherche" />
    </TableRow>

    <TableRow
        android:id="@+id/mainMenuTableRow2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5" >

        <Button
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:onClick="showMenuCarte"
            android:text="@string/main_menu_carte" />

        <Button
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:onClick="showMenuDrinks"
            android:text="@string/main_menu_drinks" />

        <Button
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:onClick="showMenuChildren"
            android:text="@string/main_menu_enfants" />
    </TableRow>

</TableLayout>