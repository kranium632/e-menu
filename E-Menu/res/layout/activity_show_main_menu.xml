<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tableLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center" >

    <!-- 2 columns -->

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:padding="5dip" >

        <Button
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:onClick="showMenuCarte"
            android:text="@string/main_menu_carte" />

        <Button
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:onClick="showMenuMenus"
            android:text="@string/main_menu_menus" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.5"
        android:padding="5dip" >

        <Button
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:onClick="showMenuEnfants"
            android:text="@string/main_menu_enfants" />

        <Button
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:onClick="showMenuRecherche"
            android:text="@string/main_menu_recherche" />
    </TableRow>

</TableLayout>